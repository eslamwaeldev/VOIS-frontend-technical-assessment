{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "isolatedModules": false,
    "noEmit": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*", "src/**/*.test.tsx", "src/**/*.test.ts"]
}
